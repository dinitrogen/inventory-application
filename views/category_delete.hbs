<h1>{{title}}: {{category.name}}</h1>

{{#if (hasMembers category_items)}}
<p><strong>Delete the following items before attempting to delete this category</strong></p>
<div style="margin-left:20px;margin-top:20px">
    <h4>Items</h4>

    <dl>
        {{#each category_items}}
        <dt>
            <a href={{this.url}}>{{this.name}}</a>
        </dt>
        {{/each}}
    </dl>

</div>

{{else}}

<p>Do you really want to delete {{category.name}}?</p>

<form method='POST' action=''>
    <div class="form-group">
        <input id={{categoryid}} class="form-control" type="hidden" name="categoryid" require="true" value={{category._id}}>
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input id="password" class="form-control" type="password" placeholder="Enter password" name="password">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button> 

</form>

    {{#if errors}}
    <ul>
        {{#each errors}}
        <li>{{this.msg}}</li>
        {{/each}}
    </ul>
    {{/if}}

{{/if}}

